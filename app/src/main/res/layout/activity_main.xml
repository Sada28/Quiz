<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="#FDFDFD"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter your name please"
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="21dp"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/optionGroup"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/ques"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="28dp"
        android:visibility="invisible">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="95dp"
            android:layout_height="45dp"
            android:layout_below="@+id/ques"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:buttonTint="#FB0606"
            android:text=""
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="95dp"
            android:layout_height="48dp"
            android:layout_below="@+id/option1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:buttonTint="#FB0606"
            android:text=""
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="95dp"
            android:layout_height="43dp"
            android:layout_alignStart="@+id/option1"
            android:layout_alignLeft="@+id/option1"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:buttonTint="#FB0606"
            android:text=""
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="95dp"
            android:layout_height="48dp"
            android:layout_alignStart="@+id/option2"
            android:layout_alignLeft="@+id/option2"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:buttonTint="#FB0606"
            android:text=""
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <TextView
        android:id="@+id/response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/optionGroup"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:textColor="#FF0000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/response"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"
        android:onClick="quiz"
        android:text="Start"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/next"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="33dp"
        android:gravity="center"
        android:textColor="#FBC02D"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>